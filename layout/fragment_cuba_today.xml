<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"

                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    app:srcCompat="@drawable/cubatoday" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    style="@style/Theme.CubaTouristGuide.Font"
                    android:layout_width="402dp"
                    android:layout_height="187dp"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingStart="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/cuba_today_text_first"
                    android:textAlignment="center" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/cubaPurpleFirst" />

                <TextView
                    android:id="@+id/textView2"
                    style="@style/Theme.CubaTouristGuide.Font"
                    android:layout_width="405dp"
                    android:layout_height="209dp"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingStart="15dp"
                    android:paddingRight="15dp"

                    android:text="@string/cuba_today_text_second"
                    android:textAlignment="center" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/cubaPurpleFirst" />

                <TextView
                    android:id="@+id/textView3"
                    style="@style/Theme.CubaTouristGuide.Font"
                    android:layout_width="match_parent"
                    android:layout_height="173dp"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingStart="15dp"
                    android:paddingRight="15dp"

                    android:text="@string/cuba_today_text_third"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

</androidx.core.widget.NestedScrollView>