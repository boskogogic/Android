<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cubaGeneral">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/zastava"
            android:layout_width="233dp"
            android:layout_height="128dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/zastava"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Republic of Cuba "
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            style="@style/Theme.CubaTouristGuide.Font"/>

        <TextView
            android:id="@+id/nativeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Republica de Cuba"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
           style="@style/Theme.CubaTouristGuide.Font"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="15dp">

            <LinearLayout
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textCapital"
                    style="@style/Theme.CubaTouristGuide.Font"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="@string/capital"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textCapitalAnswer"
                    style="@style/Theme.CubaTouristGuide.Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Havana"
                    android:textAlignment="textStart"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textArea"
                    style="@style/Theme.CubaTouristGuide.Font"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:text="@string/area"
                    android:textAlignment="center"

                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textAreaAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Theme.CubaTouristGuide.Font"
                    android:text="110,860 kmÂ²"
                    android:textAlignment="textStart"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="34dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textPopulation"
                    style="@style/Theme.CubaTouristGuide.Font"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="@string/population"
                    android:textAlignment="center"

                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textPopulationAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="11,008,112"
                    style="@style/Theme.CubaTouristGuide.Font"
                    android:textAlignment="textStart"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textDemonym"

                    style="@style/Theme.CubaTouristGuide.Font"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/demonym"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textDemonymAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cuban"
                    style="@style/Theme.CubaTouristGuide.Font"
                    android:textAlignment="textStart"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="201dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textCallingCode"

                    style="@style/Theme.CubaTouristGuide.Font"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="@string/calling_code"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textCallingCodeAnswer"
                    style="@style/Theme.CubaTouristGuide.Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+53"
                    android:textAlignment="textStart"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textCurrency"
                    style="@style/Theme.CubaTouristGuide.Font"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:text="@string/currency"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textCurrencyAnswer"
                    style="@style/Theme.CubaTouristGuide.Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cuban peso (CUP)"
                    android:textAlignment="textStart"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textLanguange"
                    style="@style/Theme.CubaTouristGuide.Font"
                    android:layout_width="95dp"
                    android:layout_height="30dp"
                    android:text="@string/language"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textLanguangeAnswer"
                    style="@style/Theme.CubaTouristGuide.Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Spanish, Haitian Creole and English"
                    android:textAlignment="textStart"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="283dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/grb"
                android:layout_width="400dp"
                android:layout_height="269dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/cubagrb"
                tools:srcCompat="@tools:sample/avatars" />

        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>